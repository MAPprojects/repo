<BorderPane prefHeight="403.0" prefWidth="740.0" xmlns:ns="http://javafx.com/javafx" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ControllerFXML">
   <center>
    <TabPane fx:id="tabPaneAll" prefHeight="33.0" prefWidth="603.0">

        <Tab closable="false" text="Students">
            <graphic>
                <ImageView fitHeight="25" preserveRatio="true">
                    <image>
                        <Image url="@/hat.png" />
                    </image>
                </ImageView>
            </graphic>
            <BorderPane>
                <left>
            <AnchorPane>
                <GridPane hgap="10" vgap="7" AnchorPane.bottomAnchor="25" AnchorPane.leftAnchor="5" AnchorPane.rightAnchor="5" AnchorPane.topAnchor="25">

                    <fx:define>
                        <ToggleGroup fx:id="groupFilterStudents" />
                    </fx:define>

                    <Label text="Id:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <Label text="Group:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <Label text="Professor:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="textFieldId" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <TextField fx:id="textFieldName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <TextField fx:id="textFieldEmail" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <TextField fx:id="textFieldGroup" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <TextField fx:id="textFieldProfessor" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <HBox spacing="20" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="5">
                        <Button fx:id="buttonAddStudent" onAction="#handlerAddStudentEvent" text="Add" />
                        <Button fx:id="buttonDeleteStudent" onAction="#handlerDeleteStudentEvent" text="Delete" />
                        <Button fx:id="buttonUpdateStudent" onAction="#handlerUpdateStudentEvent" text="Update" />
                    </HBox>
                   <VBox spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="6" GridPane.rowSpan="4">
                        <RadioButton fx:id="radioButtonFilterStudent1" onAction="#handlerFilterStudents1" text="Students starting with" />
                        <RadioButton fx:id="radioButtonFilterStudent2" onAction="#handlerFilterStudents2" text="Students having same group alphabetically" />
                        <RadioButton fx:id="radioButtonFilterStudent3" onAction="#handlerFilterStudents3" text="Students having same professor ordered by name" />
                        <TextField fx:id="textFieldFilterStudent" />
                   </VBox>
                </GridPane>
            </AnchorPane>
                </left>

                <right>
                    <AnchorPane>
                 <TableView fx:id="tableViewStudents" layoutX="101.0" layoutY="22.0" prefHeight="330.0" prefWidth="402.0" AnchorPane.bottomAnchor="25" AnchorPane.leftAnchor="25" AnchorPane.rightAnchor="25" AnchorPane.topAnchor="25">
                     <columns>
                         <TableColumn text="Id">
                             <cellValueFactory>
                                 <PropertyValueFactory property="idStudent" />
                             </cellValueFactory>
                         </TableColumn>

                         <TableColumn text="Name">
                             <cellValueFactory>
                                 <PropertyValueFactory property="name" />
                             </cellValueFactory>
                         </TableColumn>

                         <TableColumn text="Email">
                             <cellValueFactory>
                                 <PropertyValueFactory property="email" />
                             </cellValueFactory>
                         </TableColumn>
                         <TableColumn text="Group">
                             <cellValueFactory>
                                 <PropertyValueFactory property="group" />
                             </cellValueFactory>
                         </TableColumn>
                         <TableColumn text="Professor">
                             <cellValueFactory>
                                 <PropertyValueFactory property="professor" />
                             </cellValueFactory>
                         </TableColumn>
                     </columns>
                 </TableView>

                    </AnchorPane>
        </right>
            </BorderPane>
        </Tab>

          <Tab closable="false" text="Homework">
              <graphic>
                  <ImageView fitHeight="20" preserveRatio="true">
                      <image>
                          <Image url="@/homework.png" />
                      </image>
                  </ImageView>
              </graphic>
              <BorderPane>
                  <right>
                      <AnchorPane>
                          <ListView fx:id="listViewHomework" prefHeight="354.0" prefWidth="332.0" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="-74.0" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10" >
                           <padding >

                           </padding>
                          </ListView>

                      </AnchorPane>
                  </right>
                  <left>
                      <AnchorPane>
                            <GridPane>
                                <Label text="Id" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <Label text="Deadline" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <Label text="Description" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="textFieldIdHw" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                <TextField fx:id="textFieldDeadline" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                <TextField fx:id="textFieldIdDescription" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                            </GridPane>
                      </AnchorPane>
                  </left>
              </BorderPane>
          </Tab>



        <Tab closable="false" text="Grades">
            <graphic>
                <ImageView fitHeight="20" preserveRatio="true">
                    <image>
                        <Image url="@/grade.png" />
                    </image>
                </ImageView>
            </graphic>
        </Tab>
        <Tab id="TabClose" closable="false" onSelectionChanged="#handlerCloseRequest" text="Exit">
            <graphic>
                <ImageView fitHeight="20" preserveRatio="true">
                    <image>

                    </image>
                </ImageView>
            </graphic>
        </Tab>
    </TabPane>
   </center>
</BorderPane>
