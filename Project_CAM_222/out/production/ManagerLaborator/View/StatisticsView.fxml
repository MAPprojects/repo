<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.TableView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.StatisticsController"
            prefHeight="550.0" prefWidth="1000.0"
            stylesheets="View/DarkTheme.css"
            id="StatisticsView">
    <VBox>
        <HBox>
            <VBox>
                <Label text="Available Statistics:" style="-fx-font-size:20pt; -fx-font-weight:bold"/>
                <GridPane hgap="10" vgap="10" translateY="10">
                    <Label text="            Grade average of every student:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                           GridPane.columnSpan="2" style="-fx-font-size:14pt; -fx-font-weight:bold"/>
                    <Label text="  Grade average of every assignment:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                           GridPane.columnSpan="2" style="-fx-font-size:14pt; -fx-font-weight:bold" translateX="20"/>
                    <Label text="Students with an average above:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                           style="-fx-font-size:14pt; -fx-font-weight:bold"/>

                    <TextField fx:id="averageTextField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                               minWidth="50" maxWidth="50" minHeight="32" maxHeight="32"/>

                    <Button text="Show" GridPane.rowIndex="0" GridPane.columnIndex="2" minWidth="100" maxWidth="100"
                            onAction="#showGradeAverageStudents"/>
                    <Button text="Show" GridPane.rowIndex="1" GridPane.columnIndex="2" minWidth="100" maxWidth="100"
                            onAction="#showGradeAverageAssignments"/>
                    <Button text="Show" GridPane.rowIndex="2" GridPane.columnIndex="2" minWidth="100" maxWidth="100"
                            onAction="#showStudentsAverageAbove"/>

                    <Button text="Save as PDF" GridPane.rowIndex="3" GridPane.columnIndex="0" minWidth="140" maxWidth="140"
                            onAction="#saveAsPDF" fx:id="saveAsPDFButton"/>
                </GridPane>
            </VBox>
            <BarChart fx:id="barChart" minWidth="570" maxWidth="570" minHeight="280" maxHeight="280">
                <xAxis>
                    <CategoryAxis fx:id="xAxis" side="BOTTOM"/>
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxis" side="LEFT"/>
                </yAxis>
            </BarChart>
        </HBox>
        <HBox>
            <PieChart fx:id="pieChart" minWidth="400" maxWidth="400" minHeight="300" maxHeight="300" translateY="-40" translateX="-40"/>
            <TableView fx:id="tableView" minWidth="558" maxWidth="558" minHeight="280" maxHeight="280" translateY="-10" translateX="30"/>
        </HBox>
    </VBox>
</AnchorPane>
