<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Pagination?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.GradesOfStudentController"
            prefHeight="550.0" prefWidth="1000.0"
            stylesheets="View/DarkTheme.css"
            id="GradesOfStudentView">
    <VBox translateX="120">
        <GridPane hgap="10" vgap="3" translateX="-100">
            <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label text="Deadline:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Label text="Handin Week:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <Label text="Observations:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <Label text="Grade Value:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>

            <TextField fx:id="idTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       minWidth="250" maxWidth="250" onKeyPressed="#clearTableViewSelection"/>
            <TextField fx:id="descriereTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       minWidth="250" maxWidth="250" onKeyPressed="#clearTableViewSelection"/>
            <TextField fx:id="deadlineTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                       minWidth="250" maxWidth="250" onKeyPressed="#clearTableViewSelection"/>
            <TextField fx:id="saptamanaTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                       minWidth="250" maxWidth="250" onKeyPressed="#clearTableViewSelection"/>
            <TextField fx:id="observatiiTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"
                       minWidth="250" maxWidth="250" onKeyPressed="#clearTableViewSelection"/>
            <TextField fx:id="gradeTextField" GridPane.columnIndex="1" GridPane.rowIndex="5"
                       minWidth="250" maxWidth="250" onKeyPressed="#clearTableViewSelection"/>

            <CheckBox fx:id="idCheckBox" text="Filter by ID" GridPane.columnIndex="2" GridPane.rowIndex="0"
                      onAction="#filtreaza"/>
            <CheckBox fx:id="descriereCheckBox" text="Filter by Description" GridPane.columnIndex="2" GridPane.rowIndex="1"
                      onAction="#filtreaza"/>
            <CheckBox fx:id="deadlineCheckBox" text="Filter by Deadline" GridPane.columnIndex="2" GridPane.rowIndex="2"
                      onAction="#filtreaza"/>

            <Button text="Add Grade" GridPane.columnIndex="3" GridPane.rowIndex="0" onAction="#addGrade"
                    minWidth="200" maxWidth="200"/>
            <Button text="Clear Workspace" GridPane.columnIndex="3" GridPane.rowIndex="1" onAction="#clearWorkspace"
                    minWidth="200" maxWidth="200"/>
            <Label fx:id="studentNameLabel" GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.columnSpan="2" style="-fx-font-size: 14pt"/>
        </GridPane>
        <TableView fx:id="assignmentsTableView" minWidth="726" maxWidth="726" minHeight="280" maxHeight="280"/>
        <Pagination fx:id="assignmentsPagination"/>
    </VBox>
</AnchorPane>
