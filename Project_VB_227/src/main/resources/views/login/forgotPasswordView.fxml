<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="forgotPasswordRootAnchor" prefHeight="211.0" prefWidth="500.0"
            stylesheets="@forgot_password.css" xmlns="http://javafx.com/javafx/9.0.1"
            fx:controller="controller.ForgotPasswordController">
    <children>
        <Pane fx:id="forgotPasswordPAneEroare" layoutX="180.0" layoutY="115.0" prefHeight="47.0" prefWidth="266.0">
            <children>
                <ImageView fitHeight="47.0" fitWidth="47.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../systemConfiguration/warning-icon-png-2745.png"/>
                    </image>
                </ImageView>
                <Text fx:id="mesajEroareForgotPassword" fill="RED" layoutX="50.0" layoutY="20.0" strokeType="OUTSIDE"
                      strokeWidth="0.0" text="Text" wrappingWidth="192.826171875">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Text>
            </children>
        </Pane>
        <Pane prefHeight="146.0" prefWidth="200.0">
            <children>
                <ImageView fitHeight="199.0" fitWidth="274.0" layoutX="150.0" layoutY="6.0" pickOnBounds="true">
                    <image>
                        <Image url="@../student/color_splash.png"/>
                    </image>
                </ImageView>
            </children>
        </Pane>
        <Pane layoutX="12.0" prefHeight="158.0" prefWidth="488.0" AnchorPane.bottomAnchor="6.0"
              AnchorPane.leftAnchor="6.0" AnchorPane.rightAnchor="6.0" AnchorPane.topAnchor="-6.0">
            <children>
                <Label layoutX="45.0" layoutY="70.0" text="EMAIL">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <TextField fx:id="fieldEmail" layoutX="169.0" layoutY="60.0"
                           onKeyPressed="#deleteErrorMEssageOnKeyPressed" onMouseClicked="#removeErrorMEssageOnCLick"
                           prefHeight="54.0" prefWidth="234.0"/>
                <Button fx:id="trimiteMailButton" layoutX="30.0" layoutY="150.0" mnemonicParsing="false"
                        onMouseClicked="#sendEmailWithPassword">
                    <graphic>
                        <ImageView fx:id="trimiteImageView" fitHeight="39.0" fitWidth="47.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../student/add_student_accept.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Trimite"/>
                    </tooltip>
                </Button>
                <Button fx:id="exitButton" layoutX="80.0" layoutY="150.0" mnemonicParsing="false"
                        onMouseClicked="#exitToLoginScene" prefWidth="55.0">
                    <graphic>
                        <ImageView fx:id="exitImageView" fitHeight="39.0" fitWidth="47.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../student/add_stundet_declien.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Exit"/>
                    </tooltip>
                </Button>
            </children>
        </Pane>
    </children>
</AnchorPane>
