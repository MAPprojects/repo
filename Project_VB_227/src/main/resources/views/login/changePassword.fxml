<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="changePasswordRootLayout" prefHeight="439.0" prefWidth="600.0"
            stylesheets="@changePassword.css" xmlns="http://javafx.com/javafx/9.0.1"
            fx:controller="controller.ChangePasswordController">
    <children>
        <Pane layoutX="300.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Pane layoutX="150.0" prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <ImageView fitHeight="427.0" fitWidth="451.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../student/color_splash.png"/>
                            </image>
                        </ImageView>
                    </children>
                </Pane>
                <GridPane layoutX="34.0" layoutY="33.0" prefHeight="292.0" prefWidth="493.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="253.0" minWidth="10.0" prefWidth="194.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="380.0" minWidth="10.0" prefWidth="299.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label prefHeight="35.0" prefWidth="187.0" text="EMAIL SAU USERNAME"/>
                        <Label text="PAROLA CURENTA" GridPane.rowIndex="1"/>
                        <Label text="PAROLA NOUA" GridPane.rowIndex="2"/>
                        <Label text="PAROLA NOUA" GridPane.rowIndex="3"/>
                        <TextField fx:id="fieldUserSauEmail" prefHeight="41.0" prefWidth="322.0"
                                   GridPane.columnIndex="1"/>
                        <PasswordField fx:id="fieldParolaVeche" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <PasswordField fx:id="fieldParolaNoua1" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <PasswordField fx:id="fieldParolaNoua2" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </children>
                </GridPane>
                <Button layoutX="30.0" layoutY="380.0" mnemonicParsing="false" onMouseClicked="#modificaParolaHandler">
                    <graphic>
                        <ImageView fitHeight="39.0" fitWidth="47.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../student/add_student_accept.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Modifica"/>
                    </tooltip>
                </Button>
                <Button fx:id="exitButton" layoutX="80.0" layoutY="380.0" mnemonicParsing="false"
                        onMouseClicked="#closeStage">
                    <graphic>
                        <ImageView fitHeight="39.0" fitWidth="47.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../student/add_stundet_declien.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Exit"/>
                    </tooltip>
                </Button>
                <Pane fx:id="paneMesajEroare" layoutX="35.0" layoutY="318.0" prefHeight="54.0" prefWidth="243.0">
                    <children>
                        <ImageView fitHeight="35.0" fitWidth="44.0" layoutX="6.0" layoutY="2.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../systemConfiguration/warning-icon-png-2745.png"/>
                            </image>
                        </ImageView>
                        <Text fx:id="mesajEroare" fill="RED" layoutX="41.0" layoutY="23.0" strokeType="OUTSIDE"
                              strokeWidth="0.0">
                            <font>
                                <Font name="System Bold" size="18.0"/>
                            </font>
                        </Text>
                    </children>
                </Pane>
            </children>
        </Pane>
    </children>
</AnchorPane>
