<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchorMenuPane" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity" onMouseClicked="#closeSettingForProfAndStudents" prefHeight="650.0"
            prefWidth="1000.0" stylesheets="@main_menu_css.css" xmlns="http://javafx.com/javafx/9.0.1"
            fx:controller="controller.MainMenuController">
    <children>
        <Pane fx:id="menuButtonsPane" layoutX="60.0" layoutY="300.0" prefHeight="193.0" prefWidth="884.0">
            <children>
                <Button fx:id="temaMenuButton" contentDisplay="TOP" layoutX="11.0" layoutY="20.0"
                        mnemonicParsing="false" onMouseClicked="#temaButtonHandler" prefHeight="143.0" prefWidth="157.0"
                        text="TEME">
                    <graphic>
                        <ImageView fitHeight="105.0" fitWidth="123.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@tema_button_image.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Button>
                <Button fx:id="notaMenuButton" contentDisplay="TOP" layoutX="231.0" layoutY="20.0"
                        mnemonicParsing="false" onMouseClicked="#showNotaMenu" prefHeight="143.0" prefWidth="157.0"
                        text="NOTE">
                    <graphic>
                        <ImageView fitHeight="105.0" fitWidth="123.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@note_button_image.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Button>
                <Button fx:id="statisticiMEnuButton" contentDisplay="TOP" layoutX="451.0" layoutY="20.0"
                        mnemonicParsing="false" onMouseClicked="#showStatisticsScene" prefHeight="143.0"
                        prefWidth="157.0" text="STATISTICI">
                    <graphic>
                        <ImageView fitHeight="105.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@statistici_menu_button.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Button>
                <Button fx:id="exitMenuButton" contentDisplay="TOP" layoutX="671.0" layoutY="20.0"
                        mnemonicParsing="false" onMouseClicked="#exitApplication" prefHeight="143.0" prefWidth="157.0"
                        text="EXIT">
                    <font>
                        <Font size="24.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="105.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@exit_menu_button_image.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </Pane>
        <Pane layoutX="26.0" layoutY="15.0" prefHeight="54.0" prefWidth="175.0">
            <children>
                <StackPane fx:id="studentiMenuStackPane" layoutX="120.0" prefHeight="55.0" prefWidth="55.0">
                    <children>
                        <ImageView fx:id="studentiMenuImageButton" fitHeight="50.0" fitWidth="50.0"
                                   onMousePressed="#studentButtonHandler" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@student_button_image.png"/>
                            </image>
                        </ImageView>
                    </children>
                </StackPane>
                <StackPane fx:id="setariMenuStackPane" layoutX="60.0" prefHeight="55.0" prefWidth="55.0">
                    <children>
                        <ImageView fx:id="settingsImageMenu" fitHeight="53.0" fitWidth="57.0"
                                   onMouseClicked="#setSystemConfigurationScene" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@settings_button.png"/>
                            </image>
                        </ImageView>
                    </children>
                </StackPane>
                <StackPane fx:id="logoutStackPane" prefHeight="55.0" prefWidth="55.0">
                    <children>
                        <ImageView fitHeight="47.0" fitWidth="46.0" onMouseClicked="#logOutHandler" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@red-logout-512.png"/>
                            </image>
                        </ImageView>
                    </children>
                </StackPane>
            </children>
        </Pane>
        <StackPane fx:id="setariProfSiStudenti" layoutX="105.0" layoutY="65.0" prefHeight="62.0" prefWidth="245.0">
            <children>
                <CheckBox fx:id="checkBoxProfSiStudenti" mnemonicParsing="false"
                          onMouseClicked="#enableAuthenticationHandler" prefHeight="36.0" prefWidth="220.0"
                          text="Autentificare Activa">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </CheckBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
