<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" onMouseClicked="#deleteErrorMessage" prefHeight="650.0"
            prefWidth="1000.0" stylesheets="@system_config.css" xmlns="http://javafx.com/javafx/9.0.1"
            fx:controller="controller.SystemConfigurationController">
    <children>
        <TableView fx:id="tabelUsers" onMouseClicked="#deleteErrorMessageAndPane" prefHeight="650.0" prefWidth="481.0">
            <columns>
                <TableColumn fx:id="coloanaEmail" prefWidth="75.0" text="EMAIL/USERNAME"/>
                <TableColumn fx:id="coloanaRol" prefWidth="75.0" text="ROL"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <BorderPane fx:id="systemSettingsBorderPane" layoutX="225.0" layoutY="175.0" prefHeight="650.0"
                    prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <left>
                <Pane fx:id="menuButtonsPane" prefHeight="650.0" prefWidth="126.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="butonBack" contentDisplay="TOP" layoutX="11.0" layoutY="32.0"
                                mnemonicParsing="false" onMouseClicked="#backTOMainMEnu" prefHeight="59.0"
                                prefWidth="106.0" text="Inapoi">
                            <graphic>
                                <ImageView fitHeight="69.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../menu_utils_png/back_icon.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <Button fx:id="butonAdaugaUser" contentDisplay="TOP" layoutX="5.0" layoutY="140.0"
                                mnemonicParsing="false" onMouseClicked="#addUserButtonHandler" prefHeight="141.0"
                                prefWidth="118.0" text="ADAUGA USER" textAlignment="CENTER" wrapText="true">
                            <graphic>
                                <ImageView fitHeight="69.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../menu_utils_png/add_icon.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <Button fx:id="butonStergeUser" contentDisplay="TOP" layoutX="5.0" layoutY="280.0"
                                mnemonicParsing="false" onMouseClicked="#stergeUserHandler" prefHeight="136.0"
                                prefWidth="115.0" text="STERGE USER" textAlignment="CENTER" wrapText="true">
                            <graphic>
                                <ImageView fitHeight="69.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../menu_utils_png/delete-button-png-28567.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                    </children>
                </Pane>
            </left>
            <top>
                <Pane prefHeight="76.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
                    <children>
                        <CheckBox fx:id="checkboxAutentificareActiva" layoutX="20.0" layoutY="29.0"
                                  mnemonicParsing="false" onMouseClicked="#handleEnableAuthentication" prefHeight="28.0"
                                  prefWidth="154.0" text="AUTENTIFICARE ACTIVA"/>
                        <Pane fx:id="paneEroare" layoutX="200.0" prefHeight="76.0" prefWidth="323.0">
                            <children>
                                <ImageView fitHeight="48.0" fitWidth="50.0" layoutX="6.0" layoutY="14.0"
                                           pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@warning-icon-png-2745.png"/>
                                    </image>
                                </ImageView>
                                <Text fx:id="mesajEroare" fill="RED" fontSmoothingType="LCD" layoutX="60.0"
                                      layoutY="43.0" strokeType="OUTSIDE" strokeWidth="0.0">
                                    <font>
                                        <Font name="System Bold" size="18.0"/>
                                    </font>
                                </Text>
                            </children>
                        </Pane>
                    </children>
                </Pane>
            </top>
        </BorderPane>
    </children>
</AnchorPane>
