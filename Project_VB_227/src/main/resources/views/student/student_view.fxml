<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="650.0" prefWidth="1000.0" stylesheets="@student.css"
            xmlns="http://javafx.com/javafx/9.0.1" fx:controller="controller.StudentControllerV2">
    <children>
        <BorderPane fx:id="studentBorderPane" layoutX="171.0" layoutY="85.0" prefHeight="400.0" prefWidth="600.0"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">
            <right>
                <Pane fx:id="studentFilterPane" prefHeight="512.0" prefWidth="125.0" BorderPane.alignment="CENTER">
                    <children>
                        <ComboBox fx:id="studentGrupaFilter" layoutX="16.0" layoutY="33.0"
                                  onMouseClicked="#populateGrupaFilter" prefHeight="25.0" prefWidth="103.0"
                                  promptText="GRUPA"/>
                        <ComboBox fx:id="profesorStudentFilter" layoutX="15.0" layoutY="80.0"
                                  onMouseClicked="#populateProfesorFilter" prefHeight="25.0" prefWidth="103.0"
                                  promptText="PROFESOR"/>
                        <Button fx:id="studentFilterButton" layoutX="13.0" layoutY="182.0" mnemonicParsing="false"
                                onMousePressed="#filterStudents" prefHeight="25.0" prefWidth="101.0" text="FILTREAZA"/>
                        <Button fx:id="studentClearFiltersButton" layoutX="13.0" layoutY="235.0" mnemonicParsing="false"
                                onMouseClicked="#studentClearFilters" prefHeight="54.0" prefWidth="101.0"
                                text="ELIMINARE FILTRE" textAlignment="CENTER" textOverrun="CLIP" wrapText="true"/>
                        <TextField fx:id="fieldNumeStudent" layoutX="15.0" layoutY="127.0" prefHeight="25.0"
                                   prefWidth="101.0" promptText="Nume Student"/>
                    </children>
                </Pane>
            </right>
            <left>
                <Pane fx:id="menuButtonsPane" prefHeight="650.0" prefWidth="126.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="studentBackButton" contentDisplay="TOP" layoutX="11.0" layoutY="25.0"
                                mnemonicParsing="false" onMouseClicked="#backToMainMenu" prefHeight="59.0"
                                prefWidth="106.0" text="Inapoi">
                            <graphic>
                                <ImageView fitHeight="69.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../menu_utils_png/back_icon.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <Button fx:id="addStudentButton" contentDisplay="TOP" layoutX="11.0" layoutY="143.0"
                                mnemonicParsing="false" onMouseClicked="#showAddStudentDialog" prefHeight="96.0"
                                prefWidth="106.0" text="Adauga">
                            <graphic>
                                <ImageView fitHeight="77.0" fitWidth="73.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../menu_utils_png/add_icon.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <Button fx:id="stergeStudentButton" contentDisplay="TOP" layoutX="11.0" layoutY="264.0"
                                mnemonicParsing="false" onMouseClicked="#stergeStudentHandler" prefHeight="96.0"
                                prefWidth="106.0" text="Sterge">
                            <font>
                                <Font size="18.0"/>
                            </font>
                            <graphic>
                                <ImageView fitHeight="70.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../menu_utils_png/delete-button-png-28567.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="updateStudentButton" contentDisplay="TOP" layoutX="11.0" layoutY="386.0"
                                mnemonicParsing="false" onMouseClicked="#updateStudentButtonHandler" prefHeight="96.0"
                                prefWidth="106.0" text="Update">
                            <font>
                                <Font size="18.0"/>
                            </font>
                            <graphic>
                                <ImageView fitHeight="66.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../menu_utils_png/update_icon.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </Pane>
            </left>
        </BorderPane>
        <TableView id="studentTable" fx:id="studentTable" prefHeight="400.0" prefWidth="297.0">
            <columns>
                <TableColumn fx:id="studentNumeColoana" prefWidth="75.0" text="NUME"/>
                <TableColumn fx:id="studentGrupaColoana" prefWidth="75.0" text="GRUPA"/>
                <TableColumn fx:id="studentEmailColoana" prefWidth="75.0" text="EMAIL"/>
                <TableColumn fx:id="studentProfColoana" prefWidth="75.0" text="PROFESOR"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </children>
</AnchorPane>
