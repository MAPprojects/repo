<BorderPane fx:id="notaPane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.NotaController">
    <left>
        <GridPane alignment="TOP_CENTER" styleClass="gridPane1" hgap="10" vgap="10">
            <stylesheets>
                <URL value="@../View/Nota.css" />
            </stylesheets>
            <VBox GridPane.rowIndex="3">
                <HBox>
                    <Separator orientation="VERTICAL" prefWidth="34.0" visible="false" />
                    <ImageView fitHeight="100" fitWidth="70" onMouseClicked="#addButton" styleClass="imageView11" GridPane.columnIndex="2"/>
                    <Separator orientation="VERTICAL" prefWidth="5.0" visible="false" />
                    <ImageView fitHeight="100" fitWidth="70" onMouseClicked="#updateButton" styleClass="imageView2" GridPane.columnIndex="3"/>
                    <Separator orientation="VERTICAL" prefWidth="5.0" visible="false" />
                    <ImageView fitHeight="100" fitWidth="70" onMouseClicked="#deleteButton" styleClass="imageView3" GridPane.columnIndex="4"/>
                </HBox>
                <Separator orientation="VERTICAL" prefWidth="5.0" visible="false" />
                <HBox>
                    <Separator orientation="VERTICAL" prefWidth="34.0" visible="false" />
                    <ImageView fitHeight="100" fitWidth="70" onMouseClicked="#handleFilter" styleClass="imageView4" GridPane.columnIndex="2"/>
                    <Separator orientation="VERTICAL" prefWidth="5.0" visible="false" />
                    <ImageView fitHeight="100" fitWidth="70" onMouseClicked="#handleFilter2" styleClass="imageView5" GridPane.columnIndex="3"/>
                    <Separator orientation="VERTICAL" prefWidth="5.0" visible="false" />
                    <ImageView fitHeight="100" fitWidth="70" onMouseClicked="#handleFilter3" styleClass="imageView6" GridPane.columnIndex="4"/>
                </HBox>
                <Separator orientation="VERTICAL" prefWidth="5.0" visible="false" />
                <HBox>
                    <Separator orientation="VERTICAL" prefWidth="34.0" visible="false" />
                    <ImageView fitHeight="100" fitWidth="70" onMouseClicked="#createPDFMedii" styleClass="imageView7" GridPane.columnIndex="2"/>
                    <Separator orientation="VERTICAL" prefWidth="5.0" visible="false" />
                    <ImageView fitHeight="100" fitWidth="70" onMouseClicked="#clearFields" styleClass="imageView8" GridPane.columnIndex="3"/>
                    <Separator orientation="VERTICAL" prefWidth="5.0" visible="false" />
                    <ImageView fitHeight="100" fitWidth="70" onMouseClicked="#logout" styleClass="imageView9" GridPane.columnIndex="4"/>
                </HBox>
                <Separator orientation="VERTICAL" prefWidth="34.0" visible="false" />
                <VBox GridPane.columnIndex="2">
                    <ComboBox fx:id="comboBoxNote" styleClass="comboBoxNote" GridPane.columnIndex="2"/>
                </VBox>
            </VBox>
        </GridPane>
    </left>
    <center>
        <GridPane alignment="TOP_CENTER" styleClass="gridPane2">
            <stylesheets>
                <URL value="@../View/Nota.css" />
            </stylesheets>
        </GridPane>
    </center>
    <right>
        <GridPane alignment="TOP_CENTER" styleClass="gridPane3" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <stylesheets>
                <URL value="@../View/Nota.css" />
            </stylesheets>
            <TableView fx:id="tableNote" onScroll="#scroll" prefHeight="400" prefWidth="500">
                <columns>
                    <TableColumn text="IDStudent" styleClass="idStudentCol">
                        <cellValueFactory>
                            <PropertyValueFactory property="iDStudent" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="NumeStudent" styleClass="numeCol">
                        <cellValueFactory>
                            <PropertyValueFactory property="nume" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="NrTema" styleClass="nrTemaCol">
                        <cellValueFactory>
                            <PropertyValueFactory property="nrTema" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Nota" styleClass="notaCol">
                        <cellValueFactory>
                            <PropertyValueFactory property="valoare" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <HBox alignment="BOTTOM_CENTER" prefWidth="584.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <TextField fx:id="idsText" styleClass="ids" alignment="CENTER"/>
                <Separator orientation="VERTICAL" prefHeight="30.0" prefWidth="25.0" visible="false" />
                <TextField fx:id="numeText" styleClass="nume" alignment="CENTER"/>
                <Separator orientation="VERTICAL" prefHeight="30.0" prefWidth="25.0" visible="false" />
                <TextField fx:id="nrtText" styleClass="nrt" alignment="CENTER"/>
                <Separator orientation="VERTICAL" prefHeight="30.0" prefWidth="25.0" visible="false" />
                <TextField fx:id="valText" styleClass="val"/>
            </HBox>
        </GridPane>
    </right>
</BorderPane>
