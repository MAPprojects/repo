<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.effect.DropShadow?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="MVC.NotaAnumitStudentController"
            stylesheets="Stylesheets/Stylesheet.css"
            id="NotaAnumitStudentView"
            prefHeight="400.0" prefWidth="600.0">
    <HBox spacing="10">
        <VBox>
            <TableView fx:id="notaAnumitStudentTableView" prefWidth="550" prefHeight="450">
                <columns>
                    <TableColumn text="Grupa" maxWidth="100" minWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="grupaStudent"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Nume student">
                        <cellValueFactory>
                            <PropertyValueFactory property="numeStudent"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Descriere tema">
                        <cellValueFactory>
                            <PropertyValueFactory property="descriereTema"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Nota" maxWidth="50" minWidth="50">
                        <cellValueFactory>
                            <PropertyValueFactory property="valoare"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>

                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            <StackPane fx:id="pagePanel" prefHeight="65.0" prefWidth="521.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="79.0">
                <children>
                    <Pagination fx:id="pagination" currentPageIndex="0" styleClass="bullet, grid-pagination">
                        <effect>
                            <DropShadow color="#dfdfdf5d" height="16.96825396825397" radius="7.984126984126984" width="16.96825396825397" />
                        </effect>
                    </Pagination>
                </children>
            </StackPane>
        </VBox>
    </HBox>
</AnchorPane>
