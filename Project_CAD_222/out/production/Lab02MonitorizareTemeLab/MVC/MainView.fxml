<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.PasswordField?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="MVC.MainController"
            stylesheets="Stylesheets/Stylesheet.css"
            id="MainView"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <GridPane alignment="CENTER" vgap="20" hgap="20">
            <Label text="Utilizator:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="utilizatorTextField" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
            <Label text="Parola:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="parolaTextField" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
            <CheckBox fx:id="retineCheckBox" text="Retine utilizatorul si parola" GridPane.rowIndex="2" GridPane.columnIndex="1"
                      GridPane.columnSpan="2" onAction="#salvareUP"/>
            <Button text="Sign in" GridPane.rowIndex="3" GridPane.columnIndex="1" alignment="BOTTOM_RIGHT" onAction="#verificareLogin"/>
            <!--<TextFlow GridPane.rowIndex="4" GridPane.columnIndex="1">-->
                <!--<Hyperlink fx:id="creareCont" text="Creare cont..." onAction="#creeazaCont"/>-->
            <!--</TextFlow>-->
            <ImageView fx:id="logoImageView" GridPane.rowIndex="3" GridPane.columnIndex="2" GridPane.rowSpan="2"/>
        </GridPane>
    </center>
</BorderPane>
