<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<?import MVC.AutocompletionTextField?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="MVC.StudentController"
            stylesheets="Stylesheets/Stylesheet.css"
            prefHeight="400.0" prefWidth="600.0"
            id="StudentView">
    <HBox spacing="10">
        <VBox>
            <TableView fx:id="studentTableView" prefWidth="500" prefHeight="450">
                <columns>
                    <TableColumn text="ID" maxWidth="50" minWidth="50">
                        <cellValueFactory>
                            <PropertyValueFactory property="id"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Nume">
                        <cellValueFactory>
                            <PropertyValueFactory property="nume"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Grupa" maxWidth="70" minWidth="70">
                        <cellValueFactory>
                            <PropertyValueFactory property="grupa"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Email">
                        <cellValueFactory>
                            <PropertyValueFactory property="email"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Profesor">
                        <cellValueFactory>
                            <PropertyValueFactory property="profIndrumator"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>

                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            <StackPane fx:id="pagePanel" prefHeight="65.0" prefWidth="521.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="79.0">
                <children>
                    <Pagination fx:id="pagination" currentPageIndex="0" styleClass="bullet, grid-pagination">
                        <effect>
                            <DropShadow color="#dfdfdf5d" height="16.96825396825397" radius="7.984126984126984" width="16.96825396825397" />
                        </effect>
                    </Pagination>
                </children>
            </StackPane>
        </VBox>
        <VBox spacing="10" translateX="70" translateY="20">
            <GridPane hgap="5" vgap="5">
                <Label text="ID: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label text="Nume: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label text="Grupa: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label text="Email: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <Label text="Profesor: " GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <AutocompletionTextField fx:id="idTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" opacity="0.5" onKeyPressed="#handleKeyPressed"/>
                <AutocompletionTextField fx:id="numeTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" opacity="0.5" onKeyPressed="#handleKeyPressed"/>
                <AutocompletionTextField fx:id="grupaTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" opacity="0.5" onKeyPressed="#handleKeyPressed"/>
                <AutocompletionTextField fx:id="emailTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" opacity="0.5" onKeyPressed="#handleKeyPressed"/>
                <AutocompletionTextField fx:id="profIndrumatorTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" opacity="0.5" onKeyPressed="#handleKeyPressed"/>
            </GridPane>
            <Button text="Adaugare student" translateX="73" translateY="30" minWidth="180" onAction="#addStudent"/>
            <Button text="Modificare student" translateX="73" translateY="30" minWidth="180" onAction="#updateStudent"/>
            <Button text="Stergere student" translateX="73" translateY="30" minWidth="180" onAction="#deleteStudent"/>
            <Button text="Golire campuri" translateX="73" translateY="30" minWidth="180" onAction="#clearFields"/>
            <GridPane hgap="5" vgap="5" translateY="40">
                <Label text="Filtreaza dupa nume: " translateX="73" translateY="35" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label text="Filtreaza dupa grupa: " translateX="73" translateY="35" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label text="Filtreaza dupa profesor: " translateX="73" translateY="35" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <CheckBox fx:id="nameCheckBox" translateX="73" translateY="35" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#updateFilter"/>
                <CheckBox fx:id="classCheckBox" translateX="73" translateY="35" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#updateFilter"/>
                <CheckBox fx:id="teacherCheckBox" translateX="73" translateY="35" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#updateFilter"/>
            </GridPane>
        </VBox>
    </HBox>
</AnchorPane>
