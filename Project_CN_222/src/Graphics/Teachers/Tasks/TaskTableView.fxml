<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import Graphics.Teachers.Tasks.StudentEditor.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Pagination?>
<AnchorPane fx:id="mainPane" prefHeight="500.0" prefWidth="1000.0" styleClass="bg" stylesheets="/Graphics/Styles/teacher.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Graphics.Teachers.Tasks.TaskTableController">
    <HBox fx:id="hBox" prefHeight="550.0">
        <VBox>
            <ComboBox styleClass="admin-button" id="settingsbox" fx:id="settingsBox" />
            <HBox>
                <ComboBox promptText="statistics" styleClass="form-button" fx:id="statisticsBox" />
                <Button fx:id="statsBtn" text="get statistics" styleClass="form-button" />
            </HBox>
            <HBox alignment="CENTER">
                <Label styleClass="taskheader" text="Available tasks"></Label>
            </HBox>

            <GridPane alignment="CENTER">
                <TextField styleClass="teacherfield"
                           promptText="task id"
                           fx:id="idField"
                           GridPane.rowIndex="0"
                           GridPane.columnIndex="0"
                ></TextField>

                <TextField styleClass="teacherfield"
                           promptText="task name"
                           fx:id="nameField"
                           GridPane.rowIndex="1"
                           GridPane.columnIndex="0"
                ></TextField>

                <TextField styleClass="teacherfield"
                           promptText="deadline"
                           fx:id="deadlineField"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="0"
                ></TextField>

                <Button text="Edit"
                        styleClass="form-button"
                        fx:id="editButton"
                        GridPane.rowIndex="0"
                        GridPane.columnIndex="1"></Button>

                <Button text="Add"
                        styleClass="form-button"
                        fx:id="addButton"
                        GridPane.rowIndex="1"
                        GridPane.columnIndex="1"></Button>

                <Button text="Update deadline"
                        styleClass="form-button"
                        fx:id="updateButton"
                        GridPane.rowIndex="2"
                        GridPane.columnIndex="1"></Button>
            </GridPane>
            <TableView fx:id="tableView" prefHeight="200.0" prefWidth="250.0" styleClass="table" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="2" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="selectColumn" text="Grades"></TableColumn>
                    <TableColumn fx:id="descColumn" text="Description">
                        <cellValueFactory><PropertyValueFactory property="descriere" /></cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="deadlineColumn" text="Deadline">
                        <cellValueFactory><PropertyValueFactory property="deadline" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="deleteColumn" text="Delete"> </TableColumn>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>

            </TableView>
            <Pagination fx:id="pagination" stylesheets="/Graphics/Styles/pagination.css"/>

        </VBox>


    </HBox>



</AnchorPane>
