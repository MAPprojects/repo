<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="StudentEditor" id="studenteditor" prefHeight="500.0" prefWidth="150.0" stylesheets="/Graphics/Styles/teacher.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Graphics.Teachers.Tasks.StudentEditor.StudentEditorController">

    <VBox>
        <HBox alignment="CENTER" >
            <Label id="addlabel" text="Add new Student" />
        </HBox>

        <GridPane alignment="CENTER">
            <TextField styleClass="studentfield" fx:id="idField" promptText="id" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Button fx:id="editButton" styleClass="form-button" text="Edit" GridPane.columnIndex="2" GridPane.rowIndex="0" />

            <TextField styleClass="studentfield" fx:id="nameField" promptText="name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <TextField styleClass="studentfield" fx:id="groupField" promptText="group" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Button fx:id="addButton" styleClass="form-button" text="Add" GridPane.columnIndex="2" GridPane.rowIndex="1" />

            <TextField styleClass="studentfield" fx:id="emailField" promptText="email" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Button fx:id="updateButton" styleClass="form-button" text="Update" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <ComboBox styleClass="form-button" fx:id="filterBox" promptText="filter" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <TextField styleClass="studentfield" fx:id="profField" promptText="professor" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <TextField styleClass="studentfield" fx:id="filterField" promptText="filter" GridPane.columnIndex="2" GridPane.rowIndex="4" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <TableView fx:id="tableView" styleClass="editortable">
            <columns>
                <TableColumn fx:id="numeColumn" text="Name">
                    <cellValueFactory><PropertyValueFactory property="nume" /></cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="grupaColumn" text="Group">
                    <cellValueFactory><PropertyValueFactory property="grupa" /></cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="emailColumn" text="Email">
                    <cellValueFactory><PropertyValueFactory property="email" /></cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="profColumn" text="Professor">
                    <cellValueFactory><PropertyValueFactory property="profesor" /></cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="deleteColumn" text="Delete"> </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </TableView>

        <Pagination stylesheets="/Graphics/Styles/pagination.css" fx:id="pagination" />

    </VBox>

</AnchorPane>
