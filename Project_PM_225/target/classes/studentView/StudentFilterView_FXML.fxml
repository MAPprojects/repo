<AnchorPane prefHeight="400.0" prefWidth="493.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StudentController.StudentFilterController_FXML">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="568.0">
         <children>
            <Label layoutX="40.0" layoutY="38.0" prefHeight="64.0" prefWidth="521.0" text="Filtrare dupa:">
               <font>
                  <Font size="43.0" />
               </font>
            </Label>
            <VBox layoutX="40.0" layoutY="102.0" prefHeight="138.0" prefWidth="265.0">
               <children>
                  <RadioButton fx:id="radioButtonAn" mnemonicParsing="false" prefHeight="47.0" prefWidth="265.0" text="An">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <padding>
                        <Insets bottom="20.0" top="30.0" />
                     </padding>
                     <toggleGroup>
                        <ToggleGroup fx:id="StudentFiltersButtons" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="radioButtonProfesor" mnemonicParsing="false" prefHeight="32.0" prefWidth="265.0" text="profesor indrumator" toggleGroup="$StudentFiltersButtons">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                  </RadioButton>

                  <RadioButton fx:id="radioButtonLiteraDinNume" mnemonicParsing="false" prefHeight="32.0" prefWidth="265.0" text="litera din nume" toggleGroup="$StudentFiltersButtons">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <padding>
                        <Insets top="20.0" />
                     </padding>

                  </RadioButton>

               </children>
            </VBox>
            <TextField fx:id="dataField" alignment="CENTER" layoutX="40.0" layoutY="267.0" prefHeight="25.0" prefWidth="481.0" promptText="Datele filtrarii" />
            <Button fx:id="filterButton" layoutX="332.0" layoutY="341.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="81.0" text="Filtreaza" onAction="#FilterHandler">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="cancelButton" layoutX="441.0" layoutY="341.0" mnemonicParsing="false" text="Anuleaza" onAction="#CancelHandler">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
