<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="500.0" prefWidth="700.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Constrollers.LoginController">
   <children>
      <VBox fx:id="LogIn" alignment="CENTER" layoutX="187.0" layoutY="14.0" prefHeight="361.0" prefWidth="272.0" spacing="20.0">
         <children>
            <Label alignment="CENTER" prefHeight="67.0" prefWidth="203.0" text="Welcome back!" textAlignment="CENTER" translateY="-31.0">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font></Label>
            <HBox spacing="5.0">
               <children>
                  <Label prefHeight="25.0" prefWidth="71.0" text="Password" />
                  <PasswordField fx:id="txtPassword" alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="187.0" />
               </children>
            </HBox>
            <Button fx:id="bttLogIn" mnemonicParsing="false" prefHeight="45.0" prefWidth="118.0" text="Log In" />
            <Label fx:id="lblErrorMsgLogIn" prefHeight="35.0" prefWidth="270.0" textAlignment="CENTER" textFill="#d33131">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox fx:id="Register" alignment="CENTER" layoutX="185.0" layoutY="20.0" prefHeight="361.0" prefWidth="272.0" spacing="20.0" visible="false">
         <children>
            <Label alignment="CENTER" prefHeight="67.0" prefWidth="233.0" text="Choose a password" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <HBox>
               <children>
                  <Label prefHeight="25.0" prefWidth="63.0" text="Password" />
                  <PasswordField fx:id="txtNewPassword" prefHeight="25.0" prefWidth="183.0" />
               </children>
            </HBox>
            <Button fx:id="bttCreate" mnemonicParsing="false" prefHeight="45.0" prefWidth="118.0" text="Create" />
            <Label fx:id="lblErrorMsg" prefHeight="35.0" prefWidth="271.0" textAlignment="CENTER" textFill="#d33131">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
